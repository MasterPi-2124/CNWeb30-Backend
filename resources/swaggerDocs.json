  "tags": [
    {
      "name": "quiz",
      "description": "Basic info about quizzes"
    },
    {
      "name": "class",
      "description": "Basic info about classes"
    }
  ],
  "components": {
    "schemas": {
      "DefaultMongo": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:00:00.000+00:00"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:00:00.000+00:00"
          },
          "__v": {
            "type": "number",
            "example": 0
          }
        }
      },
      "Quiz": {
        "type": "object",
        "properties": {
          "startTime": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:00:00.000+00:00"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:45:00.000+00:00"
          },
          "formLink": {
            "type": "string",
            "format": "url",
            "example": "https://example.com/"
          },
          "classId": {
            "type": "string"
          }
        }
      },
      "Class": {
        "type": "object",
        "properties": {
          "codename": {
            "type": "string",
            "default": "123456"
          },
          "subject": {
            "type": "string",
            "default": "CN Web"
          },
          "semester": {
            "type": "integer",
            "minimum": 0,
            "default": 20222
          },
          "studentCount": {
            "type": "integer",
            "minimum": 0,
            "default": 50
          },
          "note": {
            "type": "string",
            "default": "A note"
          }
        }
      }
    }
  },

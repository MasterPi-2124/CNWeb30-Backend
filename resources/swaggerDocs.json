{
  "openapi": "3.0.2",
  "info": {
    "title": "Quiz API",
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:3005/api" }],
  "tags": [
    {
      "name": "quiz",
      "description": "Basic info about quizs"  
    }
  ],
  "components": {
    "schemas": {
      "DefaultMongo": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:00:00.000+00:00"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:00:00.000+00:00"
          },
          "__v": {
            "type": "number",
            "example": 0
          }
        }
      },
      "Quiz": {
        "type": "object",
        "properties": {
          "startTime": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:00:00.000+00:00"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "example": "2023-05-31T08:45:00.000+00:00"
          },
          "formLink": {
            "type": "string",
            "format": "url",
            "example": "https://example.com/"
          },
          "classId": {
            "type": "string"
          }
        }
      },
      "Class": {
        "type": "object",
        "properties": {
          "property": {
            "type": "integer"
          }
        }
      }
    }
  },
  "paths": {
    "/quizs": {
      "get": {
        "tags": ["quiz"],
        "summary": "Get all quizzes",
        "description": "Return all quizzes",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/DefaultMongo"
                      },
                      {
                        "$ref": "#/components/schemas/Quiz"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["quiz"],
        "summary": "Create new quiz",
        "description": "Return new quiz created",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/DefaultMongo"
                    },
                    {
                      "$ref": "#/components/schemas/Quiz"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/quizs/{id}": {
      "get": {
        "tags": ["quiz"],
        "summary": "Get quiz by id",
        "description": "Return single quiz",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of quiz to return",
            "required": true,
            "schema": {
              "type": "string",
              "example": "645d04485aa78ee9ac47e189"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/DefaultMongo"
                    },
                    {
                      "$ref": "#/components/schemas/Quiz"
                    }
                  ]
                }
              } 
            }
          }
        }
      },
      "put": {
        "tags": ["quiz"],
        "summary": "Update quiz by id",
        "description": "Return single quiz before update",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of quiz to return",
            "required": true,
            "schema": {
              "type": "string",
              "example": "645d04485aa78ee9ac47e189"
            }
          }
        ],
        "requestBody": {
          "description": "Quiz's updated values",
          "required": true,
          "content": {
            "application/json": {
              "schema":{
                "$ref": "#/components/schemas/Quiz"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/DefaultMongo"
                    },
                    {
                      "$ref": "#/components/schemas/Quiz"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["quiz"],
        "summary": "Delete quiz by id",
        "description": "Return deleted quiz",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of quiz to return",
            "required": true,
            "schema": {
              "type": "string",
              "example": "645d04485aa78ee9ac47e189"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/DefaultMongo"
                    },
                    {
                      "$ref": "#/components/schemas/Quiz"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
